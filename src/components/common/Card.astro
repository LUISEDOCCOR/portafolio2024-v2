---
const {image, title, content, preview, github, stack} = Astro.props
import Link from "./Link.astro"
import Github from "../Icons/Github.astro"
import Arrow from "../Icons/Arrow.astro"
import IconsDev from "../Icons/dev/IconsDev.astro"
---
<article class="flex overflow-hidden rounded-lg border border-neutral-700 bg-neutral-900">
    <section class="w-[40%] flex justify-center items-center flex-col px-6 gap-2">
        <h3 class="text-2xl font-semibold">{title}</h3>
        <p class="text-lg">{content}</p>
        <div class="grid grid-cols-2 w-full mt-5 gap-2">
            <Link href={github} label="GitHub" isBig={false}><Github slot="before"/></Link>
            <Link href={preview} label="Web" isBig={false}><Arrow slot="after"/></Link>
        </div>
    </section>
    <section class={`overflow-hidden ${stack ? "w-[53%]" : "w-[60%]" }`}>
        <img 
            class="object-cover object-center hover:scale-110 transition-transform"
            src={image} 
            alt={`project image ${title}`}
        >
    </section>
    {
        stack && (
        <section class="w-[7%] flex justify-center items-center gap-8 flex-col">
        {
            stack.map((name) => (
                <IconsDev styles="hover:scale-125 transition-transform" name={name}/>
            ))
        }
        </section>
        )
    }
</article>