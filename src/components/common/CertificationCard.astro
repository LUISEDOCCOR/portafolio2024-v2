---
const { title, content, link } = Astro.props
import Link from "./Link.astro"
import Arrow from "../Icons/Arrow.astro"
---
<section class="bg-neutral-900 p-8 rounded-lg border 
border-neutral-700 flex justify-center flex-col gap-6 scroll-animation">
    <h3 class="text-2xl font-semibold text-center">{title}</h3>
    <p class="text-lg text-left">{content}</p>
    <div class="w-1/2 mx-auto">
        <Link label="Visitar" href={link} isBig={false} isPrimary={true}>
            <Arrow slot="after"/>
        </Link>
    </div>
</section>