---
const { title, content, href } = Astro.props
import Link from "./Link.astro"
import Arrow from "../Icons/Arrow.astro"
---
<section class="bg-neutral-900 p-8 rounded-lg border 
border-neutral-700 flex justify-center items-center flex-col gap-4">
    <h3 class="text-2xl font-semibold text-center">{title}</h3>
    <p class="text-lg">{content}</p>
    <div class="w-1/2">
        <Link label="Visitar" href={href} isBig={false}>
            <Arrow slot="after"/>
        </Link>
    </div>
</section>