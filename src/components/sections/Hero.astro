---
import { db, eq ,Images } from "astro:db"
import Link from "../common/Link.astro"
import Github from "../Icons/Github.astro"
import Gmail from "../Icons/Gmail.astro"

const data = await db.select().from(Images).where(eq(Images.name, "profile")) 
const profile = data.length == 0 ? "/profile.webp" : data[0].src
---

<section id="aboutme" class="scroll-mt-16 px-4 mt-12 xl:mt-36 xl:px-0">
    <img 
        class="w-28 h-28 object-cover object-center aspect-square rounded-full" 
        src={profile}
        alt="Image Profile Luis"
    >
    <div class="mt-8">
        <div class="text-4xl xl:text-5xl flex items-center gap-2">
            <h1 class="font-bold" aria-label="Luis Eduardo Ocegueda Cortes" >Hey, soy Luis Eduardo</h1>
            <span id="hero-hand" >üñê</span>
        </div>            
        <p class="font-light mt-6 leading-snug text-3xl xl:text-4xl">
            +1 a√±o de experiencia. <strong class="text-cYellow font-normal">Desarrollador Front-end y Back-End.</strong> 
            <strong class="text-cBlue font-normal">Programador autodidacta.</strong> 
            <strong class="text-cPink font-normal">Entusiasta en la programaci√≥n.</strong>
        </p>
        <div class="mt-8 space-x-5 grid grid-cols-2 w-3/4 xl:w-2/5">
            <Link isPrimary={false} label="GitHub" href="https://github.com/LUISEDOCCOR" isBig={true}>
                <Github slot="before"/>
            </Link>
            <Link isPrimary={true} label="Contacto" href="mailto:luiseduardoocegueda@gmail.com" isBig={true}>
                <Gmail slot="before"/>
            </Link>
        </div>
    </div>
</section>
<style>
#hero-hand{
    animation: hand 1s 1 alternate ease-in-out;
    &:hover{
        animation: hand 1s infinite alternate ease-in-out;
    }
}
@keyframes hand{
    0%{
        transform: rotate(90deg) ;
    }
    50%{
        transform: rotate(-90deg) ;
    }
    100%{
        transform: rotate(0deg) ;
    }
    
}
</style>